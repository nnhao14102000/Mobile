<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btCallOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Other Activity"
            android:onClick="clickToCallOtherActivity"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tinh Tong"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/txtViewNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Num1"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/edtNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/txtViewNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Num2"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <EditText
                    android:id="@+id/edtNum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="13"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:onClick="clickToAdd"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btBrowser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Browser"
            android:onClick="clickToStartBrowser"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/btBrowserLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Browser with Launch"
            android:onClick="clickToStartToBrowserLaunch"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/btPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Phone"
            android:onClick="clickToStartPhoneCall"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/btException"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exception Condition"
            android:onClick="clickToGetException"
            android:textSize="20dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</RelativeLayout>
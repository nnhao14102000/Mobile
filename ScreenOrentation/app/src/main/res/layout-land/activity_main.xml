<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnApple"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/btnMango"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Mango"
        android:layout_toRightOf="@+id/btnApple"/>

    <Button
        android:id="@+id/btnBanana"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Banana"
        android:layout_toRightOf="@id/btnMango"/>

    <Button
        android:id="@+id/btnGrapes"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Grapes"
        android:layout_below="@id/btnApple"/>

    <Button
        android:id="@+id/btnKiwi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Kiwi"
        android:layout_toRightOf="@id/btnGrapes"
        android:layout_below="@id/btnMango"/>


</RelativeLayout>